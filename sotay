#include<stdio.h>

int main() {
    int dongia = 500;
    int a,b;
    /* a là tổng số tiền 10 cuốn sổ tay
       b là tổng số tiền giảm 20% */
    a = dongia * 10;
    b = a * (100 - 20) / 100; 
    printf("So tien 10 cuon so tay la: %d \n", a);
    printf("So tien 10 cuon so tay duoc giam la: %d", b);
}
